@page
@model AuctionsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LIForCars</title>
    <link href="~/css/fontStyles.css" rel="stylesheet" />
    <link href="~/css/auctions.css" rel="stylesheet" />
    <script src="~/js/auctions.js"></script>

</head>
<body>
    <div class="cabecalho">
        <div class="hero">
            <header>
                <h2>LIFORCARS</h2>
                <nav>
                    <a id="homeLink" href="/">HOME</a>
                    <a id="aboutLink" href="#" style="color: #d9534f">AUCTIONS</a>
                    <a id="contactLink" href="#">CONTACT</a>
                    <divLogOut>
                        <aUltimo href="#" data-target="login" class="signin">LOG OUT</aUltimo>
                    </divLogOut>
                </nav>
            </header>
        </div>
    </div>



    <div class="auctionsDiv">
        <div id="leiloesContent" class="userLeiloes" style="display: block;">
            <div class="userLeiloesCabecalho">
                <h1 class="listaDados" style="margin-left: 4%; color: white; margin-bottom: 0;">ON GOING AUCTIONS</h1>
                <div class="auctionFilters">
                    <div>
                        <span style="color: white">REMAINING TIME</span>
                        <div class="triangle-down"></div>
                    </div>
                    <div>
                        <span style="color: white">Highest Bid</span>
                        <div class="triangle-down"></div>
                    </div>
                    <div style="display: flex; flex-direction: row; align-items: center; justify-content: space-between; width: 41%;">
                        <input type="text" id="searchInput" placeholder="Category, Motor ..." />
                        <img src="../images/help.svg" alt="Help Icon" style="width: 14%; height: auto;">
                    </div>
                    
                </div>
            </div>
            <div>
                @foreach(var auction in Model.Auctions) {
                    <div class="englobaAuction @("Make" + auction.Car?.Make?.Replace(" ", "_")) @("Model" + auction.Car?.Model?.Replace(" ", "_")) @("Year" + auction.Car?.LaunchYear) @("Origin" + auction.Car?.Origin?.Replace(" ", "_")) @("Motor" + auction.Car?.Motor?.Replace(" ", "_")) @("Kms" + auction.Car?.Kms.ToString("F2").Replace(".", "_")) @("Status" + auction.Car?.StatusDescription?.Replace(" ", "_")) @("Base_Price" + auction.BasePrice.ToString("F2").Replace(".", "_")) @("Price" + auction.BuyNowPrice.ToString("F2").Replace(".", "_"))" style="display:block">
                        <div class="auctionInfoExtended">
                            <div class="auctionInfo">
                                <div class="auctionInfoCabeçalho">
                                    <h3 class="car-model">@auction.Car?.Make @auction.Car?.Model (@auction.Car?.LaunchYear)</h3>
                                    <img src="@auction.Car?.PicUrl" alt="@auction.Car?.Make @auction.Car?.Model">
                                </div>
                                <div class="auctionInfoResumo">
                                    <div>
                                        <div>
                                            <p>Origin: @auction.Car?.Origin</p>
                                            <p>Motor: @auction.Car?.Motor (@auction.Car?.FuelType)</p>
                                            <p>Milage: @auction.Car?.Kms</p>
                                            <p>Status Description: @auction.Car?.StatusDescription</p>
                                        </div>
                                        <div>
                                            <p>Base Price: @auction.BasePrice €</p>
                                            <p>Buy Now: @auction.BuyNowPrice €</p>
                                            <p>Starting Date: @auction.InitDateTime.ToString("yyyy-MM-dd")</p>
                                            <p>Ending Date: @auction.EndDateTime.ToString("yyyy-MM-dd")</p>
                                        </div>
                                    </div>
                                    <div class="AuctionOptions">
                                        <button class="moreInfoButton">MORE INFO</button>
                                        <button class="moreInfoButton">BIDS</button>
                                    </div>
                                </div>
                            </div>
                            <div class="additionalInfo" style="display: none;">
                                <div class="additionalInfoBox">
                                    <div class="moreInfoEmptyColumn"></div>
                                    <div style="width: 80%;">
                                        <div class="infoBid" style="background-color: rgb(113, 121, 125); color: white;">
                                            <span>User</span>
                                            <div>
                                                <span>Bid Value</span>
                                                <div class="triangle-down"></div>
                                            </div>
                                            <span>Time of Bid</span>
                                        </div>
                                        <div class="sortBidsDescending" style="display: block;">
                                            @foreach(var bid in Model.BidsMap[auction].Bids.Take(10)) {
                                                <div class="infoBid">
                                                    <span>@bid.User.Username</span>
                                                    <span>@bid.BidValue €</span>
                                                    <span>@bid.bidTime</span>
                                                </div>
                                            }
                                            <div class="infoBidBreaker">
                                                <span>PRESS "MORE INFO" TO CHECK ALL BIDS</span>
                                            </div>
                                        </div>
                                        <div class="sortBidsAscending" style="display: none;">
                                            @foreach(var bid in Model.BidsMap[auction].Bids.Reverse()) {
                                                <div class="infoBid">
                                                    <span>@bid.User.Username</span>
                                                    <span>@bid.BidValue €</span>
                                                    <span>@bid.bidTime</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
        </div>
    </div>





    <footer>
        <div class="bottom-icons">
            <a href="#">Facebook</a>
            <a> | </a>
            <a href="#">Instagram</a>
            <a> | </a>
            <a href="#">LinkedIn</a>
            <a> | </a>
            <a href="#">help@LIForCars.pt</a>
            <a> | </a>
            <a href="#">Privacy Policy</a>
            <a> | </a>
            <a href="#">Terms & Conditions</a>
        </div>
    </footer>







</body>
</html>
